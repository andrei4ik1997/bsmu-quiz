{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"strict": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"moduleResolution": "bundler",
		"importHelpers": true,
		"target": "ES2022",
		"module": "ES2022",
		"paths": {
			"@pages/*": ["./src/app/pages/*"],
			"@shared/components/*": ["./src/app/shared/components/*"],
			"@shared/db/*": ["./src/app/shared/db/*"],
			"@shared/entities/*": ["./src/app/shared/entities/*"],
			"@shared/guards/*": ["./src/app/shared/guards/*"],
			"@shared/modals/*": ["./src/app/shared/modals/*"],
			"@shared/pipes/*": ["./src/app/shared/pipes/*"],
			"@shared/services/*": ["./src/app/shared/services/*"],
			"@shared/utils/*": ["./src/app/shared/utils/*"]
		}
	},
	"angularCompilerOptions": {
		"enableI18nLegacyMessageIdFormat": false,
		"strictInjectionParameters": true,
		"strictInputAccessModifiers": true,
		"strictStandalone": true,
		"strictTemplates": true,
		"typeCheckHostBindings": true,
		"extendedDiagnostics": {
			"checks": {
				"controlFlowPreventingContentProjection": "error",
				"deferTriggerMisconfiguration": "error",
				"interpolatedSignalNotInvoked": "error",
				"invalidBananaInBox": "error",
				"missingControlFlowDirective": "error",
				"missingNgForOfLet": "error",
				"missingStructuralDirective": "error",
				"nullishCoalescingNotNullable": "error",
				"optionalChainNotNullable": "error",
				"skipHydrationNotStatic": "error",
				"suffixNotSupported": "error",
				"textAttributeNotBinding": "error",
				"uninvokedFunctionInEventBinding": "error",
				"uninvokedFunctionInTextInterpolation": "error",
				"uninvokedTrackFunction": "error",
				"unparenthesizedNullishCoalescing": "error",
				"unusedLetDeclaration": "error",
				"unusedStandaloneImports": "error"
			},
			"defaultCategory": "error"
		}
	}
}
